@model IEnumerable<WEB.Models.TurmaViewModel>

@{
    ViewData["Title"] = "Turma";
}

<h1>Lista de Turmas</h1>

<p>
    <a asp-action="Create">Cadastrar nova Turma</a>
</p>

@if (TempData["AlertMessage"] != null)
{
    <h8 class="alert">
        <strong>@TempData["AlertMessage"]</strong>
    </h8>
}
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curso_Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Turma)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Situacao)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Curso_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Turma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Situacao)
            </td>
            <td>
                    @Html.ActionLink("Editar/Inativar", "Edit", new { id=item.Id}) |
                    @Html.ActionLink("Deletar", "Delete", new { id=item.Id})
            </td>
        </tr>
}
    </tbody>
</table>
