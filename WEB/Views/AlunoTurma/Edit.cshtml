

@{
    ViewData["Title"] = "Editar Vinculo";
}

<h1>Editar Vinculo Aluno/Turma</h1>

<hr />
@if (TempData["AlertMessage"] != null)
{
    <h8 class="alert">
        @TempData["AlertMessage"]
    </h8>
}
<hr />
@model WEB.Models.AlunoTurmaViewModel
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Aluno_Id" class="form-control" style="display:none;" />
            </div>
            <div class="form-group">
                <input asp-for="Turma_Id" class="form-control" style="display:none;" />
            </div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Turma" class="control-label"></label>
                <select class="form-select" asp-items="Model.SelectedTurmaList" asp-for="Turma">
                    <option>--Selecione a nova Turma--</option>
                </select>
                <span asp-validation-for="Turma" class="text-danger"></span>
            </div>                        
            <div class="form-group">
                <br /><input type="submit" value="Editar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
   <br/> <a asp-action="AlunoTurma">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
